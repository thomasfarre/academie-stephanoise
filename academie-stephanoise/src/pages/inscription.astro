---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer";
import Heading from "../components/foundations/Heading.jsx";
import BodyText from "../components/foundations/BodyText.jsx";
import RegisterForm from "../components/RegisterForm.jsx";

// Improved meta information
const title = "Inscription | Académie Stéphanoise - Arts Martiaux et Sports de Combat à Saint-Étienne";
const description =
  "Inscrivez-vous à l'Académie Stéphanoise pour nos cours de MMA, Boxe pied poing, Kickboxing, Luta livre, Tolpar, Krav Maga, et Cross Training à Saint-Étienne. Inscription en ligne simple et rapide, cours d'essai gratuit. Tarifs adaptés et planning flexible.";

const jsonLd = {
