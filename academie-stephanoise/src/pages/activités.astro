---
import Layout from "../layouts/Layout.astro";
import logoImage from "../assets/logo.png";
import { Image } from "astro:assets";
import { getImage } from "astro:assets";

import Navbar from "../components/Navbar";
import Heading from "../components/foundations/Heading";
import BodyText from "../components/foundations/BodyText";
import ActivityBlock from "../components/ActivityBlock";
import ActivityLogo from "../components/ActivityLogo";
import CallToActionSection from "../components/CallToActionSection";
import Footer from "../components/Footer";
import kravIcon from "../assets/icons/krav_picto.png";
import boxeIcon from "../assets/icons/boxe_picto.png";
import mmaIcon from "../assets/icons/mma_picto.png";
import tolparIcon from "../assets/icons/tolpar_picto.png";
import lutaIcon from "../assets/icons/lutalivre_picto.png";
import crossTrainingIcon from "../assets/icons/crosstraining_picto.png";
import kravImage from "../assets/krav.jpg";
import boxeImage from "../assets/boxe.jpg";
import mmaImage from "../assets/mma.jpeg";
import tolparImage from "../assets/tolpar.jpeg";
import lutaImage from "../assets/luta-livre.png";
import crossTrainingImage from "../assets/crossfit.webp";

const title = "Activités - Académie Stéphanoise";
const description =
  "En savoir plus sur l'Académie Stéphanoise, un lieu dédié aux arts martiaux et au fitness à Saint-Étienne.";
const keywords =
  "Académie Stéphanoise, arts martiaux, fitness, Saint-Étienne, activités";

const optimizedBoxeIcon = await getImage({ src: boxeIcon, format: "webp" });
const optimizedBoxeImage = await getImage({ src: boxeImage, format: "webp" });

const optimizedKravIcon = await getImage({ src: kravIcon, format: "webp" });
const optimizedKravImage = await getImage({ src: kravImage, format: "webp" });

const optimizedMmaIcon = await getImage({ src: mmaIcon, format: "webp" });
const optimizedMmaImage = await getImage({ src: mmaImage, format: "webp" });

const optimizedTolparIcon = await getImage({ src: tolparIcon, format: "webp" });
const optimizedTolparImage = await getImage({ src: tolparImage, format: "webp" });

const optimizedLutaIcon = await getImage({ src: lutaIcon, format: "webp" });
const optimizedLutaImage = await getImage({ src: lutaImage, format: "webp" });

const optimizedCrossTrainingIcon = await getImage({ src: crossTrainingIcon, format: "webp" });
const optimizedCrossTrainingImage = await getImage({ src: crossTrainingImage, format: "webp" });

const optimizedImages = {
  boxe: {
    icon: optimizedBoxeIcon,
    image: optimizedBoxeImage
  },
  krav: {
    icon: optimizedKravIcon,
    image: optimizedKravImage
  },
  mma: {
    icon: optimizedMmaIcon,
    image: optimizedMmaImage
  },
  tolpar: {
    icon: optimizedTolparIcon,
    image: optimizedTolparImage
  },
  luta: {
    icon: optimizedLutaIcon,
    image: optimizedLutaImage
  },
  crossTraining: {
    icon: optimizedCrossTrainingIcon,
    image: optimizedCrossTrainingImage
  }
};
---

<Layout title={title} description={description} keywords={keywords}>
  <Navbar client:load>
    <Image
      src={logoImage}
      alt="Logo de l'Académie Stéphanoise"
      width={100}
      height={100}
    />
  </Navbar>
  <div class="bg-neutral-900">
    <div class="max-w-7xl mx-auto pt-20 px-6 lg:px-8">
      <Heading level={2} white> La liste de nos activités </Heading>
      <BodyText variant="headline" whiteText className="mt-4 max-w-prose">
        Découvrez nos activités sportives et de remise en forme en détail.
        Consultez notre planning pour trouver les horaires qui vous conviennent,
        inscrivez-vous directement en ligne, ou contactez-nous pour venir tester
        nos cours avant de vous inscrire définitivement. Nous serons ravis de
        vous accueillir et de vous aider à atteindre vos objectifs de fitness et
        de bien-être.
      </BodyText>
    </div>
  </div>
  <div class="bg-neutral-900 py-8 sm:py-12">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div
        class="-mx-6 grid grid-cols-2 gap-0.5 overflow-hidden sm:mx-0 sm:rounded-2xl md:grid-cols-3"
      >
        <ActivityLogo
          client:idle
          headingText="Boxe pieds-poings"
          targetId="boxe"
        >
          <Image
            src={boxeIcon}
            alt="Boxe"
            width={100}
            height={100}
            class=" bg-orange-100 w-20 h-20 object-contain rounded-2xl"
          />
        </ActivityLogo>
        <ActivityLogo client:idle headingText="Krav Maga" targetId="krav-maga">
          <Image
            src={kravIcon}
            alt="Krav Maga"
            width={100}
            height={100}
            class=" bg-blue-100 w-20 h-20  object-contain rounded-2xl"
          />
        </ActivityLogo>

        <ActivityLogo client:idle headingText="MMA" targetId="mma">
          <Image
            src={mmaIcon}
            alt="MMA"
            width={100}
            height={100}
            class=" bg-green-100 w-20 h-20  object-contain rounded-2xl"
          />
        </ActivityLogo>
        <ActivityLogo client:idle headingText="Tolpar" targetId="tolpar">
          <Image
            src={tolparIcon}
            alt="Tolpar"
            width={100}
            height={100}
            class=" bg-purple-100 w-20 h-20  object-contain rounded-2xl"
          />
        </ActivityLogo>
        <ActivityLogo
          client:idle
          headingText="Luta Livre"
          targetId="luta-livre"
        >
          <Image
            src={lutaIcon}
            alt="Luta Livre"
            width={100}
            height={100}
            class=" bg-red-100 w-20 h-20  object-contain rounded-2xl"
          />
        </ActivityLogo>
        <ActivityLogo
          client:idle
          headingText="Cross Training"
          targetId="cross-training"
        >
          <Image
            src={crossTrainingIcon}
            alt="Cross Training"
            width={100}
            height={100}
            class=" bg-yellow-100 w-20 h-20  object-contain rounded-2xl"
          />
        </ActivityLogo>
      </div>
    </div>
  </div>
  <div class="bg-neutral-50 pt-12">
    <div class="max-w-[120rem] mx-auto px-6 lg:px-8">
      <div class="space-y-12 xl:space-y-24">
        <ActivityBlock
          bgColor="bg-orange-100"
          targetId="boxe"
          activityUrl="boxe-pied-poing"
          headingText="Boxe pieds poing"
          images={optimizedImages.boxe}
          paragraphs={[
            "Le Full Contact, la boxe thaï, la boxe française et le kick boxing sont autant de disciplines regroupées sous l’appellation de boxes pied-poing. Ces sports de combat allient frappes des poings et des pieds, offrant une palette technique riche et variée, adaptée à différents styles et objectifs.",
            "Alliance parfaite entre physique et mental, ces disciplines demandent bien plus que de la force brute. Elles sollicitent agilité, maîtrise de soi, intelligence stratégique, courage et une excellente condition physique.",
            "A l'Académie Stéphanoise, nous vous accompagnons dans l’apprentissage des bases indispensables de la boxe pied-poing, que ce soit pour vous préparer à la compétition, compléter vos compétences en MMA, ou améliorer votre pratique de la self-défense.",
          ]}
          duration="1h"
          level="Débutant"
          schedule="Plusieurs fois par semaine"
          features={[
            { text: "Développement physique complet" },
            { text: "Confiance en soi et maîtrise de soi" },
            { text: "Respect et valeurs sportives" },
            { text: "Gestion du stress" },
            { text: "Défoulement et discipline" },
          ]}
          buttonLabels={["Planning", "S'inscrire"]}
        />
        <ActivityBlock
          bgColor="bg-blue-100"
          activityUrl="krav-maga"
          targetId="krav-maga"
          images={optimizedImages.krav}
          headingText="Krav-Maga"
          invert
          duration="1h"
          level="Débutant"
          schedule="Quotidiennement"
          paragraphs={[
            "Le Krav-Maga se compose en deux parties :",
            "La self-défense. Elle renferme des techniques variées visant à permettre aux initiés de se défendre contre une attaque, éviter les blessures et venir à bout d’un assaillant. Cette partie contient des parades contre une grande diversité d’attaques armées ou non et dans des positions de base différentes : debout, assis, couché.",
            "Le combat au corps à corps, qui constitue une phase plus avancée du Krav-Maga. Il regroupe des éléments ayant trait au combat proprement dit : les tactiques, les feintes, la combinaison d’attaques différentes, la dimension psychologique du combat... et autant d’exercices permettant de renforcer son esprit et de développer une capacité à gérer des confrontations violentes dans un état de stress.",
          ]}
          features={[
            { text: "Techniques variées pour se défendre" },
            { text: "Parades contre les attaques armées et non armées" },
            { text: "Développement de la dimension psychologique" },
            { text: "Renforcement de l'esprit face au stress" },
            { text: "Capacité à gérer les confrontations violentes" },
          ]}
          buttonLabels={["Planning", "S'inscrire"]}
          images={optimizedImages.krav}
        />
        <ActivityBlock
          bgColor="bg-green-100"
          activityUrl="mma"
          targetId="mma"
          images={optimizedImages.mma}
          headingText="Mixed Martial Arts (MMA)"
          duration="1h30"
          level="Intermédiaire à avancé"
          schedule="Hebdomadaire"
          paragraphs={[
            "Le mixed martial arts (MMA), littéralement « arts martiaux mixtes », est un sport de combat complet associant pugilat et lutte au corps à corps dans lequel les deux combattants peuvent utiliser de nombreuses techniques.",
            "Selon les fédérations, sont autorisées des techniques de percussion telles que coups de pied, de poing, de genou et de coude, des techniques de projections et de soumission (Luta Livre) et parfois certaines techniques de percussion au sol.",
            "Le combat libre existe en réalité depuis fort longtemps et on en retrouve des traces dans de nombreux arts anciens.",
          ]}
          features={[
            {
              text: "Combinaison de techniques variées (pied, poing, projections, soumissions)",
            },
            { text: "Adapté au combat debout et au sol" },
            { text: "Héritage de nombreux arts martiaux anciens" },
            { text: "Idéal pour développer force, agilité et stratégie" },
            { text: "Rigueur et contrôle dans les combats" },
          ]}
          buttonLabels={["Planning", "S'inscrire"]}
          images={optimizedImages.mma}
        />
        <ActivityBlock
          bgColor="bg-purple-100"
          activityUrl="tolpar"
          targetId="tolpar"
          images={optimizedImages.tolpar}
          invert
          headingText="Tolpar"
          duration="1h30"
          level="Tous niveaux"
          schedule="Hebdomadaire"
          paragraphs={[
            "Le Tolpar est un sport de combat moderne qui puise son origine dans les duels ancestraux à l’arme blanche.",
            "Le système enseigné au F-club s’appuie sur le travail de l’école russe TOLPAR.",
            "L’élève peut en toute sécurité apprendre le maniement du couteau et s’affronter avec différents partenaires. Le Tolpar revêt un aspect ludique adapté à tous les physiques.",
          ]}
          features={[
            { text: "Apprentissage sécurisé du maniement du couteau" },
            { text: "Basé sur les techniques de l'école TOLPAR" },
            { text: "Adapté à tous les physiques" },
            { text: "Développement des compétences tactiques" },
            { text: "Aspect ludique pour une pratique agréable" },
          ]}
          buttonLabels={["Planning", "S'inscrire"]}
          images={optimizedImages.tolpar}
        />
        <ActivityBlock
          bgColor="bg-red-100"
          activityUrl="luta-livre"
          targetId="luta-livre"
          images={optimizedImages.luta}
          headingText="Luta Livre"
          duration="1h"
          level="Tous niveaux"
          schedule="Hebdomadaire"
          paragraphs={[
            "La Luta Livre est un style de lutte venant du Brésil. Elle consiste à amener son adversaire au sol pour le faire abandonner grâce à des finalisations comme des clés de bras, clés d’épaules, étranglements, clés de chevilles, compressions musculaires, et bien d’autres.",
            "C’est un sport indispensable pour se perfectionner au sol pour les pratiquants de MMA et de Krav Maga.",
            "C’est aussi un sport extrêmement ludique pour commencer les sports de combats car les frappes sont absentes. Les enfants et les adolescents en raffolent également !",
            "Ce sport se pratique en rashguard, short ou pantalon.",
          ]}
          features={[
            { text: "Perfectionnement au sol avec des techniques variées" },
            { text: "Absence de frappes, idéal pour débutants et enfants" },
            { text: "Pratique complémentaire pour le MMA et le Krav Maga" },
            { text: "Ludique et accessible à tous" },
            { text: "Équipement simple : rashguard et short ou pantalon" },
          ]}
          buttonLabels={["Planning", "S'inscrire"]}
          images={optimizedImages.luta}
        />
        <ActivityBlock
          bgColor="bg-yellow-100"
          activityUrl="cross-training"
          targetId="cross-training"
          images={optimizedImages.crossTraining}
          headingText="Cross Fit"
          invert
          duration="1h"
          level="Tous niveaux"
          schedule="Plusieurs fois par semaine"
          paragraphs={[
            "Sessions de cross training mixtes pour renforcer votre corps et votre esprit. Section cross training 100% féminine pour une dynamique de groupe et un soutien mutuel.",
            "Entraînements spécifiques pour les sports de combat : endurance, force, explosivité et techniques de combat.",
            "Des conseils d'experts pour améliorer vos performances et repousser vos limites.",
            "Que vous soyez novice ou athlète confirmé(e), notre programme est conçu pour vous challenger à chaque étape. Rejoignez-nous et faites passer votre préparation physique au niveau supérieur !",
          ]}
          features={[
            { text: "Sessions mixtes pour renforcer corps et esprit" },
            { text: "Section 100% féminine avec dynamique de groupe" },
            { text: "Entraînements spécifiques pour les sports de combat" },
            { text: "Conseils d'experts pour progresser" },
            { text: "Adapté aux novices comme aux athlètes confirmés" },
          ]}
          buttonLabels={["Planning", "S'inscrire"]}
          images={optimizedImages.crossTraining}
        />
      </div>
    </div>

    <div class="translate-y-1/2 transform">
      <CallToActionSection client:visible />
    </div>
  </div>
  <Footer client:visible paddingTop="pt-72" paddingTopXl="xl:pt-96">
    <Image
      src={logoImage}
      alt="Logo de l'Académie Stéphanoise"
      width={100}
      height={100}
    />
  </Footer>
</Layout>
