---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import logoImage from "../assets/logo.png";
import Calendar from "../components/Calendar.jsx";
import Navbar from "../components/Navbar";
import Footer from "../components/Footer";
import CallToActionSection from "../components/CallToActionSection.jsx";
const title =
  "Planning des Cours | Académie Stéphanoise - MMA, Boxe, Krav Maga à Saint-Étienne";
const description =
  "Consultez le planning des cours de l'Académie Stéphanoise : MMA, Boxe, Krav Maga, Luta Livre, Cross Training et Tolpar. Horaires flexibles, cours tous niveaux à Saint-Étienne. Réservez votre créneau dès maintenant.";
const keywords =
  "planning académie stéphanoise, horaires mma saint-étienne, cours boxe loire, planning krav maga, emploi du temps sports combat, cross training saint-étienne, cours arts martiaux, horaires luta livre";
---

<Layout title={title} description={description} keywords={keywords}>
  <Navbar client:load>
    <Image
      src={logoImage}
      alt="Logo de l'Académie Stéphanoise"
      width={100}
      height={100}
    />
  </Navbar>
  <div class="bg-neutral-50 pt-4">
    <div class="max-w-[150rem] mx-auto lg:pt-16 lg:px-8">
      <Calendar client:only="react" />
    </div>
    <div class="translate-y-1/2 transform">
      <CallToActionSection client:visible />
    </div>
  </div>
  <Footer client:visible paddingTop="pt-72" paddingTopXl="xl:pt-96">
    <Image
      src={logoImage}
      alt="Logo de l'Académie Stéphanoise"
      width={100}
      height={100}
    />
  </Footer>
</Layout>
